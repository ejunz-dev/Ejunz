.page--home_files, .page--training_files, .page--contest_detail, .page--contest_manage, .page--homework_files
  .col--checkbox
    width: 60px

  .col--size
    width: 100px

  .col--operation
    width: 80px
    min-width: 80px
    white-space: nowrap

  .files
    .col--name
      max-width: 300px
      min-width: 150px

      a
        display: block
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

    .sort-btn
      &:hover
        opacity: 0.8

      &.active
        opacity: 1

        .sort-indicator
          opacity: 1 !important
