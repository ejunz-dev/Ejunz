.page--home_files, .page--training_files, .page--contest_detail, .page--contest_manage, .page--homework_files
  .col--checkbox
    width: 60px

  .col--size
    width: 100px

  .col--operation
    width: 80px
    min-width: 80px
    white-space: nowrap

  .files
    .col--name
      max-width: 300px
      min-width: 150px

      a
        display: block
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap

    .sort-btn
      &:hover
        opacity: 0.8

      &.active
        opacity: 1

        .sort-indicator
          opacity: 1 !important

.page--mindmap_files, .page--mindmap_files_mmid, .page--mindmap_files_branch, .page--mindmap_files_branch_mmid
  .section
    display: flex
    flex-direction: column
    height: calc(100vh - 120px)

    .section__header
      flex-shrink: 0

    .section__body
      flex-shrink: 0

  .files
    overflow-y: auto
    overflow-x: hidden
    flex: 1
    min-height: 0
