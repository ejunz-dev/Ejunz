.base-card-list
  display: flex
  height: calc(100vh - 100px)

.base-card-list__sidebar
  width: 280px
  border-right: 1px solid #e0e0e0
  overflow-y: auto
  background: #f8f9fa

.base-card-list__header
  padding: 16px
  border-bottom: 1px solid #e0e0e0
  background: #fff
  display: flex
  justify-content: space-between
  align-items: center

.base-card-list__title
  margin: 0
  font-size: 16px
  font-weight: 600
  color: #333

.base-card-list__actions
  display: flex
  gap: 8px

.base-card-list__action-btn
  width: 32px
  height: 32px
  padding: 0
  border-radius: 50%
  border: none
  cursor: pointer
  display: inline-flex
  align-items: center
  justify-content: center
  font-size: 16px
  font-weight: bold
  transition: all 0.2s ease
  outline: none

.base-card-list__action-btn--save
  background: #4caf50
  color: #fff

  &:hover
    background: #45a049
    transform: scale(1.1)

.base-card-list__action-btn--cancel
  background: #999
  color: #fff

  &:hover
    background: #777
    transform: scale(1.1)

.base-card-list__action-btn--delete
  background: #f44336
  color: #fff

  &:hover
    background: #d32f2f
    transform: scale(1.1)

.base-card-list__action-btn--edit
  background: #2196f3
  color: #fff

  &:hover
    background: #1976d2
    transform: scale(1.1)

.base-card-list__action-btn--new
  background: #2196f3
  color: #fff

  &:hover
    background: #1976d2
    transform: scale(1.1)

.base-card-list__container
  padding: 8px

.base-card-list__item
  padding: 12px 16px
  margin-bottom: 4px
  border-radius: 6px
  cursor: pointer
  background: #fff
  border: 1px solid #e0e0e0
  transition: all 0.2s ease

.base-card-list__item.selected
  background: #e3f2fd
  border: 2px solid #2196f3

.base-card-list__item-content
  display: flex
  align-items: center
  gap: 8px

.base-card-list__checkbox
  appearance: none
  -webkit-appearance: none
  width: 18px
  height: 18px
  min-width: 18px
  cursor: pointer
  margin: 0
  margin-right: 10px
  display: none
  flex-shrink: 0
  vertical-align: middle
  border-radius: 50%
  border: 2px solid #999
  background: transparent
  position: relative
  transition: all 0.2s ease
  outline: none

  &:hover
    border-color: #2196f3
    background: rgba(33, 150, 243, 0.1)

  &:checked
    background: #2196f3
    border-color: #2196f3

  &:checked:after
    content: '✓'
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    color: #fff
    font-size: 12px
    font-weight: bold
    line-height: 1

.base-card-list__drag-handle
  display: none
  cursor: grab
  color: #999
  font-size: 16px
  user-select: none

.base-card-list__item-title
  font-size: 14px
  font-weight: 400
  color: #333
  flex: 1

.base-card-list__item.selected .base-card-list__item-title
  font-weight: 600

.base-card-list__empty
  text-align: center
  padding: 40px 20px
  color: #999

.base-card-list__empty-text
  font-size: 14px

.base-card-list__content
  flex: 1
  overflow-y: auto
  background: #fff

.base-card-list__content-header
  display: flex
  justify-content: space-between
  align-items: center

.base-card-list__content-title
  margin: 0

.base-card-list__content-edit-btn
  padding: 8px 16px
  font-size: 14px
  text-decoration: none

// 编辑模式样式
.base-card-list__container.edit-mode
  .base-card-list__item
    cursor: grab

  .base-card-list__item:active
    cursor: grabbing

  .base-card-list__item:hover
    background: #f5f5f5 !important

  .base-card-list__drag-handle
    display: block

  .base-card-list__checkbox
    display: block

.base-card-list__item.dragging
  opacity: 0.5

