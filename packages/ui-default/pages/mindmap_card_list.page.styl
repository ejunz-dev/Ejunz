.mindmap-card-list
  display: flex
  height: calc(100vh - 100px)

.mindmap-card-list__sidebar
  width: 280px
  border-right: 1px solid #e0e0e0
  overflow-y: auto
  background: #f8f9fa

.mindmap-card-list__header
  padding: 16px
  border-bottom: 1px solid #e0e0e0
  background: #fff
  display: flex
  justify-content: space-between
  align-items: center

.mindmap-card-list__title
  margin: 0
  font-size: 16px
  font-weight: 600
  color: #333

.mindmap-card-list__actions
  display: flex
  gap: 8px

.mindmap-card-list__action-btn
  padding: 6px 12px
  font-size: 12px

.mindmap-card-list__container
  padding: 8px

.mindmap-card-list__item
  padding: 12px 16px
  margin-bottom: 4px
  border-radius: 6px
  cursor: pointer
  background: #fff
  border: 1px solid #e0e0e0
  transition: all 0.2s ease

.mindmap-card-list__item.selected
  background: #e3f2fd
  border: 2px solid #2196f3

.mindmap-card-list__item-content
  display: flex
  align-items: center
  gap: 8px

.mindmap-card-list__drag-handle
  display: none
  cursor: grab
  color: #999
  font-size: 16px
  user-select: none

.mindmap-card-list__item-title
  font-size: 14px
  font-weight: 400
  color: #333
  flex: 1

.mindmap-card-list__item.selected .mindmap-card-list__item-title
  font-weight: 600

.mindmap-card-list__empty
  text-align: center
  padding: 40px 20px
  color: #999

.mindmap-card-list__empty-text
  font-size: 14px

.mindmap-card-list__content
  flex: 1
  overflow-y: auto
  background: #fff

.mindmap-card-list__content-header
  display: flex
  justify-content: space-between
  align-items: center

.mindmap-card-list__content-title
  margin: 0

.mindmap-card-list__content-edit-btn
  padding: 8px 16px
  font-size: 14px
  text-decoration: none

// 编辑模式样式
.mindmap-card-list__container.edit-mode
  .mindmap-card-list__item
    cursor: grab

  .mindmap-card-list__item:active
    cursor: grabbing

  .mindmap-card-list__item:hover
    background: #f5f5f5 !important

  .mindmap-card-list__drag-handle
    display: block

.mindmap-card-list__item.dragging
  opacity: 0.5

