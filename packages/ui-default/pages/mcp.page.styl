.mcp-endpoint-info
    background: #f5f5f5
    padding: 20px
    border-radius: 4px
    margin-bottom: 30px

.endpoint-url
    display: flex
    align-items: center
    gap: 10px
    margin: 10px 0

    code
        flex: 1
        padding: 10px
        background: white
        border: 1px solid #ddd
        border-radius: 4px
        font-family: monospace
        word-break: break-all

.endpoint-instructions
    margin-top: 15px

    ol
        margin-left: 20px

    code
        background: #f0f0f0
        padding: 2px 6px
        border-radius: 3px
        font-size: 0.9em

.server-status
    padding: 4px 8px
    border-radius: 3px
    font-size: 0.9em
    font-weight: 500

    &.server-status-connected
        background: #4caf50
        color: white

    &.server-status-disconnected
        background: #9e9e9e
        color: white

    &.server-status-error
        background: #f44336
        color: white

.mcp-empty-message
    text-align: center
    padding: 40px
    color: #666

.mcp-status-ws
    display: none

.mcp-token-section
    margin-top: 15px
    padding-top: 15px
    border-top: 1px solid #ddd

.mcp-delete-form
    margin-top: 15px
    padding-top: 15px
    border-top: 1px solid #ddd

.server-info
    margin-bottom: 30px

.tools-section
    margin-top: 30px

.tools-section-header
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 15px

    h3
        margin: 0

.tool-card
    border: 1px solid #ddd
    border-radius: 4px
    padding: 15px
    margin-bottom: 15px
    background: #fafafa

.tool-header
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 10px

.tool-name
    margin: 0
    font-size: 1.1em

.tool-id
    font-size: 0.9em
    color: #666

.tool-description
    margin-bottom: 10px

.tool-schema
    margin-top: 10px

    pre
        background: #f5f5f5
        padding: 10px
        border-radius: 3px
        overflow-x: auto
        font-size: 0.9em

