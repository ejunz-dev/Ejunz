.record-status--text
  for key, value in $record-status-color
    &.{key}
      color: value !important

.record-status--icon
  display: inline-block
  width: 1.15em
  for key, value in $record-status-icon
    &.{key}:before
      content: value
      color: $record-status-color[key]

.record-status--border
  border-left: rem(3px) solid transparent
  for key, value in $record-status-color
    &.{key}
      border-left: rem(3px) solid lighten(value, 10%)

.record-status--background
  color: #FFF

  for key, value in $record-status-color
    &.{key}
      background: value

// Session Status Styles
.session-status--text
  for key, value in $session-status-color
    &.session-status--{key}
      color: value !important

.session-status--icon
  display: inline-block
  width: 1.15em
  for key, value in $session-status-icon
    &.session-status--icon-{key}:before
      content: value
      color: $session-status-color[key]

.session-status--border
  border-left: rem(3px) solid transparent
  for key, value in $session-status-color
    &.session-status--{key}
      border-left: rem(3px) solid lighten(value, 10%)

// Also apply session status styles to record-status classes for compatibility
.record-status--text
  for key, value in $session-status-color
    &.session-status--{key}
      color: value !important

.record-status--icon
  for key, value in $session-status-icon
    &.session-status--icon-{key}:before
      content: value
      color: $session-status-color[key]

.record-status--border
  for key, value in $session-status-color
    &.session-status--{key}
      border-left: rem(3px) solid lighten(value, 10%)