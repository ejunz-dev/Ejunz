.session-records-blocks
  display: flex
  flex-wrap: wrap
  gap: 4px
  align-items: center

.session-record-block
  display: inline-block
  width: 12px
  height: 12px
  border-radius: 2px
  cursor: pointer
  transition: opacity 0.2s, transform 0.2s
  opacity: 0.8

  &:hover
    opacity: 1
    transform: scale(1.2)

