$edge_token_form_width = 400px
$edge_token_form_gap_v = 50px
$edge_token_form_gap_h = 50px
$edge_token_dialog_expand_v = 50px
$edge_token_dialog_expand_h = 30px

.dialog--edge-token__main
  background: #FFF
  width: rem($edge_token_form_width)
  padding: rem($edge_token_form_gap_v $edge_token_form_gap_h)
  margin: 0 auto
  position: relative
  z-index: 2
  box-shadow: 0 0 30px rgba(#000, 0.6)

.dialog--edge-token__title
  text-align: center
  color: lighten($primary-color, 20%)

.dialog--edge-token__note
  margin: 0.3em 0 2em 0
  text-align: center
  font-size: rem($font-size-secondary)

.dialog--edge-token__close-container
  position: absolute
  right: rem(15px)
  top: rem(15px)

